<% if @artist.errors.any? %>
  <ul class="errors">
    <%= @artist.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <h2>Paintings:</h2>
  <%= f.fields_for :paintings do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>
  <% end %>

  <br><br>
  <%= f.submit "Add Artist" %>
<% end %>
